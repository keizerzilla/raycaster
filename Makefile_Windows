OBJS = raycaster.c

CC = gcc

INCLUDE_PATHS = -IE:\mingw_dev_lib\include

LIBRARY_PATHS = -LE:\mingw_dev_lib\lib

#COMPILER_FLAGS = -Wl,-subsystem,windows

LINKER_FLAGS = -lmingw32 -lSDL2main -lSDL2 -lm

